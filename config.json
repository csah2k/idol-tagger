{
    "service":{
        "logfile": "service.log",
        "loglevel": "INFO",
        "maxtasks": 2,
        "mongodb": "mongodb://localhost:27017/",
        "database": "index-flow",
        "storage": "./data"
    },
    
    "elastic": {
        "threads": 8,
        "api":{
            "host": "localhost",
            "port": 9200
        }
    },

    "spacynlp":{
        "languages":{
            "en" : "en_core_web_sm",
            "pt": "pt_core_news_sm",
            "unknown": "xx_ent_wiki_sm"
        }
    },

    "doccano":{
        "threads": 8,
        "tempfolder": "data",
        "url": "http://localhost:8000",
        "login":{
            "username": "admin",
            "password": "password"
        }
    },

    "admin_tasks":[
        {
            "name": "Sync users,projects,labels from Doccano",
            "type": "sync_projects_users_labels",
            "enabled": true,
            "startrun": true,
            "interval": 120
        },
        {
            "name": "Sync documents from Doccano",
            "type": "sync_documents",
            "enabled": true,
            "startrun": true,
            "interval": 600
        },
        {
            "name": "Sync annotations from Doccano",
            "type": "sync_annotations",
            "enabled": true,
            "startrun": true,
            "interval": 400
        }
    ],


    "user_tasks":{ 
        "doccano":{
            "name": "Sync docs: Elastic -> Doccano -> MongoDB",
            "type": "doccano",
            "projectid": "0",
            "enabled": true,
            "startrun": true,
            "interval": 600,
            "maxremaining": 100,
            "query": {
                "match_all": {}
            }
        },
        "rss": {
            "type": "rss",
            "name": "RSS Feeds",
            "enabled": false,
            "filters": false,
            "interval": 300,
            "threads": 5,
            "feeds": "data/feeds.rss"
        },
        "stock": {
            "name": "Empresas nas bolsas US e BR",
            "type": "stock",
            "enabled": false,
            "interval": 604800,
            "threads": 2,
            "database": "BUSINESS",
            "url": "https://finnhub.io/api/v1",
            "api": "bqu00jvrh5rb3gqqf9q0",
            "key": "bqu04u7rh5rb3gqqfb1g",
            "exchanges": ["US", "BR"],
            "filters": [ ]
        }
    },


    "TEST_indextasks": {
        "stock": {
            "name": "Empresas nas bolsas US e BR",
