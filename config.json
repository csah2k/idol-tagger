            "startrun": true,
            "interval": 3600,
            "running": false,
            "error": null,
            "params": {
                "threads": 5,
                "url": "https://finnhub.io/api/v1",
                "api": "bqu00jvrh5rb3gqqf9q0",
                "key": "bqu04u7rh5rb3gqqfb1g",
                "exchanges": ["US", "BR"],
                "filters": [ ]
            }
        }
