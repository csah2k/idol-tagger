            "enabled": false,
            "api": "bqu00jvrh5rb3gqqf9q0",
            "key": "bqu04u7rh5rb3gqqfb1g",
            "exchanges": ["US", "BR"],
            "filters": [ ]
        },
        "rss": {
            "name": "Feeds de noticias",
            "type": "rss",
