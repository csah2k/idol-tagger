{
    "service":{
        "logfile": "service.log",
        "loglevel": "INFO"
    },
    "idol": {
        "threads": 8,
        "dah": {
            "host": "localhost",
            "port": 9100
        },
        "dih": {
            "host": "localhost",
            "port": 9101
        }
    },
    "nlp":{
        "enabled": true, 
        "threads": 2,
        "tempfolder": "data",
        "doccano":{
            "url": "http://localhost:8000",
            "username": "admin",
            "password": "password"
        },
        "projects": [
            {
                "name": "sentiment",
                "enabled": false,
                "startrun": true,
                "interval": 600,
                "textfield": "TITLE",
                "datafield": "NLP_SENTIMENT",
                "database": "TRAINING_SENTIMENT",
                "queries": [
                    {
                        "DatabaseMatch" : "RSS_FEEDS",
                        "AnyLanguage": true,
                        "MinScore" : 20,
                        "MaxResults": 3,
                        "Text" : "Apple:TITLE OR Google:TITLE OR Amazon:TITLE"
                    }
                ]
            },
            {
                "name": "rss ner",
                "enabled": false,
                "interval": 600,
                "textfield": "DRECONTENT",
                "datafield": "NLP_ENTITIES",
                "database": "TRAINING_ENTITIES",
                "queries": [
                    {
                        "DatabaseMatch" : "RSS_FEEDS",
                        "AnyLanguage": true,
                        "MinScore" : 30,
                        "MaxResults": 10,
                        "Text" : "Apple AND Google"
                    }
                ]
            }
        ]
    },
    "indextasks":[
        {
            "name": "Empresas nas bolsas US e BR",
            "type": "stock",
            "enabled": true,
            "startrun": true,
            "interval": 604800,
            "threads": 2,
            "database": "BUSINESS",
            "url": "https://finnhub.io/api/v1",
            "api": "bqu00jvrh5rb3gqqf9q0",
            "key": "bqu04u7rh5rb3gqqfb1g",
            "exchanges": ["US", "BR"],
            "filters": [ ]
        },
        {
            "name": "Feeds de noticias",
            "type": "rss",
            "enabled": true,
            "startrun": true,
            "interval": 3600,
            "threads": 16,
            "database": "RSS_FEEDS",
            "feeds": "data/feeds.rss",
            "filters": [
                {
                    "DatabaseMatch": "BUSINESS",
                    "FieldText": "GREATER{20000.0}:SHAREOUTSTANDING_NUM OR (MATCH{BR}:COUNTRY_PARAM AND GREATER{5000.0}:SHAREOUTSTANDING_NUM)",
                    "AnyLanguage": true,
                    "MinScore": 20
                },
                {
                    "DatabaseMatch": "PERSONS",
                    "AgentBooleanField": "AGENT_BOOL",
                    "AnyLanguage": true,
                    "MinScore": 20
                }
            ]
        }
    ]   

}