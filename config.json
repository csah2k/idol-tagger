{
    "service":{
        "logfile": "service.log",
        "loglevel": "INFO",
        "maxtasks": 4,
        "mongodb": "mongodb://localhost:27017/",
        "database": "idxflw",
        "storage": "./data"
    },
    
    "elastic": {
        "threads": 8,
        "api":{
            "host": "localhost",
            "port": 9200
        }
    },

    "spacynlp":{
        "languages":{
            "en" : "en_core_web_sm",
            "pt": "pt_core_news_sm",
            "unknown": "xx_ent_wiki_sm"
        }
    },

    "doccano":{
        "threads": 8,
        "url": "http://localhost:80",
        "login":{
            "username": "admin",
            "password": "password"
        }
    },

    "system_tasks":[
        {
            "name": "Sync metadada from Doccano",
            "type": "sync_doccano_metadada",
            "interval": 120
        }
    ],


    "tasks_defaults":{ 
        "sync_doccano_metadada": {
            "name": "",
            "type": "sync_doccano_metadada",
            "enabled": true,
            "startrun": true,
            "interval": 3600,
            "running": false,
            "error": null,
            "params": { }
        },
        "import_from_index":{
            "name": "",
            "type": "import_from_index",
            "enabled": true,
            "startrun": true,
            "interval": 3600,
            "running": false,
            "error": null,
            "params": { 
                "projectid": "0",
                "maxremaining": 50,
                "query_text": ""
            }
        },
        "export_from_doccano":{
            "name": "",
            "type": "export_from_doccano",
            "enabled": true,
            "startrun": true,
            "interval": 120,
            "running": false,
            "error": null,
            "params": { 
                "projectid": "0"
            },
            "remove": false
        },
        "rss": {
            "name": "RSS Feeds",
            "type": "rss",
            "enabled": true,
            "startrun": true,
            "interval": 3600,
            "running": false,
            "error": null,
            "params": {
                "threads": 5,
                "feeds": "data/feeds.rss"
            }            
        },
        "stock": {
            "name": "Empresas nas bolsas US e BR",
